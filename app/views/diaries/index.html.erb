<div class="wrap">

<%= render 'header' %>
<%= render 'nav' %>
<div class="container">

  <div class="main">
  <% current_year = 0 %>
  <% current_month = 0 %>
  <% @diaries.each do |diary| %>
    <% if current_year != diary.diary_date.year || current_month != diary.diary_date.month %>
    <% current_year = diary.diary_date.year %>
    <% current_month = diary.diary_date.month %>
    <div>
      <span class="year"><%= diary.diary_date.year %></span>
      <span class="month"><%= diary.diary_date.month %></span>
    </div>
    <% end %>
    <a class="diary" href="#">
      <div class="items">
        <div class="date">
          <span class="day"><%= diary.diary_date.day %></span>
          <span class="week"><%= diary.week %></span>
        </div>

        <div class="info">
          <div class="content">
            <%= simple_format(excerpt(diary.content,'',radius: 50)) %>
          </div>
          <div class="location"><%= diary.location  %></div>
        </div>

        <div class="pic">
          <img src="https://picsum.photos/200/300/?random" alt="diary picture">
        </div>

      </div>
    </a>
  <% end %>
  </div>

  
  <div class="sidebar">
    <%= render 'sidepocket' %>
    <%= render 'sidedraft' %>
  </div>

</div>


</div>
