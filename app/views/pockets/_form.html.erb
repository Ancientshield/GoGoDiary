<script>
  $(document).ready(function () {
    $('#pocket_list_expect_date').val(new Date().toDateInputValue());
  });
</script>
<section class="main">
  <h3>加入口袋</h3>
  <%= simple_form_for(p, method: :post, url: pockets_path) do |f| %>
  <% if p.location.try(:[],'name') %>
  <div><%= p.location.try(:[],'name') %></div>
  <% end %>
  <% if p.location.try(:[],'address') %>
  <div><%= p.location.try(:[],'address') %></div>
  <% end %>
  <div><%= f.input :expect_date, as: :date, html5: true, label: '預計拜訪時間：' %></div>
  <div><%= f.input :description, label:'描述：', placeholder: '加點喜歡的描述吧' %></div>
  <div><%= f.submit '儲存' %></div>
  <% end %>
</section>
<section class="layouts/sidebar">
</section>