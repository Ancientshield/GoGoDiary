  integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
  integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
  integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<style type="text/css">
  .btn {
    font-size: 12px;
  }

  .btn-color {
    background-color: #000;
  }

  .table {
    color: rgb(109, 109, 109);
  }

  tr {
    padding-top: 20px;
  }
</style>
<%= render 'layouts/header' %>
<%= render 'layouts/nav' %>
<div class="container">
  <%= notice %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>地點</th>
        <th>地址</th>
        <th>時間</th>
        <th>描述</th>
      </tr>
    </thead>
    <tbody>
      <%# binding.pry %>
      <% @pockets.each do |pocket| %>
      <tr>
        <td><%= pocket.location['name'] %></td>
        <td><%= pocket.location['address'] %></td>
        <td><%= "#{pocket.expect_date.year}-#{pocket.expect_date.month}-#{pocket.expect_date.day}" %></td>
        <td><%= pocket.description %></td>
        <td><%= link_to '編輯', edit_pocket_path(pocket), class:"btn btn-outline-secondary btn-linkto" %>
          <%= link_to '刪除', pocket_path(pocket), method: "delete", data: { confirm: "確認刪除？" }, class:"btn btn-outline-secondary btn-linkto" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>