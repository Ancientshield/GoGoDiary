<%= render 'layouts/header' %>
<%= render 'layouts/nav' %>
<div class="container">
    <section class="main">
        <div><%= @pocket.location['name'] %></div>
        <div><%= @pocket.location['address'] %></div>
        <%= simple_form_for(@pocket, method: :post, url: pockets_path) do |f| %>
        <div><%= f.input :expect_date, as: :date, html5: true, label: '預計拜訪時間：' %></div>
        <div><%= f.input :description, label:'描述：', placeholder: '加點喜歡的描述吧' %></div>
        <div><%= f.submit '儲存' %></div>
        <% end %>
    </section>
    <section class="layouts/sidebar">
    </section>
</div>